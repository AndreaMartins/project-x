<script src="/javascript/popup.js"></script>

<div id="imagecontainerleft"class="main">
<h1> <%= user.firstName %>&nbsp<%= user.lastName %> </h1>

<br>
<br>
<div class="itemholder">
<div class="image-holder">
    <% let imgUrl = user.avatar; %>
      <% if(imgUrl == "") imgUrl = "/images/user.svg";%>

  <img class="profile-img" src=<%= imgUrl %> alt="" ></img>
</div>
<div class="description-holder">
  <ul>
    <li><strong>Name: </strong><%=user.firstName %>&nbsp<%=user.lastName %></li>
    <li><strong>City: </strong><%=user.address.city %></li>
    <li><strong>Country: </strong><%= user.address.country%></li>
        <% if (user.role === "Professional"){ %>
            <% if(isUserLoggedIn){ %>
              <input type="hidden" id="userId" value=<%= currentUser._id%>>
            <% if (String(user._id) !== String(currentUser._id)){ %>
            <li><button type="submit" id="evaluate" class="btn btn-primary" name="button"> Request evaluation  </button></li>
            <input type="hidden" id="expertId" value=<%= user._id %>>
              <% }; %>
            <% }; %>
    <li><strong>Website: </strong><a href=<%= expert.website%>>link</a></li>
    <li><strong>CV (Resume): </strong> <a class="linkviewcv" href=/images/<%= expert.cv %> >View</a></li>
    <% if(expert.completed.length > 0){ %>
      <li><strong>Items evaluated: </strong> </li>
      <% expert.completed.forEach((item)=>{ %>
         <a href="/items/<%=item%>" class="linkview">View</a>
    <%   });%>
  <%  } %>

<% }; %>
        <% if ( user.itemsUser.length > 0){ %>
    <li><strong>Collections: </strong><a href="/items/<%=user.itemsUser[0]%>" class="linkview">Item
  </a></li>
        <% }; %>
    <li><strong><a href="mailto:<%=user.email%>">Contact</a> </strong></li>
  </ul>
</div>
</div>
<div id="items"></div>
<br><br><br>


<br>
<p> <a href="/users">All the experts </a> <br>Check them out! </p>
</div>

<script src="../javascript/APIHandler.js"></script>
<script src="../javascript/users.js"></script>
