
<h1 style="text-align: center"> <%= item.title %> </h1>

<br>
<br>

<div class="container-fluid">
<div class="row-fluid">
<div class="col-sm-2">
  <img class="items-img" src=<%=item.images[0].image %> alt="" ></img>
</div>
<div class="col-sm-8">
  <ul>
    <li><strong>Title: </strong><%=item.title %></li>
    <li><strong>Type: </strong><%=item.type %></li>
    <li><strong>Description: </strong><%= item.description%></li>
    <li><strong>Item's Estimated Age: </strong><%=item.approxAge %></li>
</div>
<div class="col-sm-2">
  <% if(isUserLoggedIn) { %>
  <% if(String(currentUser._id) != String(item.userId)){ %>
    <form class="makeoffer" action="/offer/<%= item._id %>" method="post">
  <ul>
    <li><label for="makeoffer">Offer Amount (EUR): </label><input id="offer" type="number" style="text-align: center; font-size: 20px;" name="makeoffer" value="0"></li><br>
    <li><button class="btn btn-primary btn-round" type="button" name="button">Make<bR>Offer!</button></li><br>
    <li><strong> Highest Offer: </strong><div id="highestoffer"><br>
      No Offers
    </div></li>
  </ul>
</form>
  <% } %>
  <% } else { %>
    <form class="makeoffer" action="/offer/<%= item._id %>" method="post">
    <ul>
      <li><label for="makeoffer">Offer Amount (EUR): </label><input type="number" style="text-align: center; font-size: 20px;" name="makeoffer" value="0"></li><br>
      <li><button class="btn btn-primary btn-round" type="submit" name="button">Make<bR>Offer!</button></li><br>
      <li><strong> Highest Offer: </strong><div id="highestoffer"><br>
        No Offers
      </div></li>
    </ul>
  </form>
  <% } %>
</div>
</div>
</div>
<br><br><br>

<form class="login" action="/" method="post">
<label for="feedback">Feedback: </label>
<input type="feedback" id="feedback" name="feedback" placeholder="Enter your feedback"><br>
<br>
<button type="submit" name="button">Post feedback</button>
</form>
<br>
<p> <a href="/items">All the stamps</a> <br>Check them out! </p>
